<%= form_for project.comments.build, remote: true do |f| %>
  <div class="col-md-12" data-turbolinks-temporary>
    <% if current_user.nil? %>
      <div class="col-md-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %><br />
      </div>
      <% else %>
        <%= f.hidden_field :name, value: current_user.name %>
      <% end %>
    <div class="col-md-10">
    <%= f.text_area :content, class: "form-control", placeholder: "Content"  %>
    <%= f.hidden_field :id, value: @project.id %>
    </div>
    <div class="col-md-2">
      <%= f.submit "comment", class: "btn btn-info" %>
    </div>
  </div>
<% end %>
