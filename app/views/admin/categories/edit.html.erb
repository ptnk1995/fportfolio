<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "edit_record" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for [:admin, @category], url: admin_category_path do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: t("category_name"),
                class: "form-control reset-input" %>
            </div>
            <div class = "clr"></div>
            <div class="col-md-6 top-20 padding-0">
              <div class="form-group col-md-3">
                <%= button_tag type: "submit",
                  class: "btn ripple btn-gradient btn-info" do %>
                  <div><span><%= t "update_button" %></span></div>
                <% end %>
              </div>
              <div class="form-group col-md-3">
                <%= button_tag type: "reset",
                  class: "btn ripple btn-gradient btn-default" do %>
                  <div><span><%= t "reset_button" %></span></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mess-area-add">
              <% if @category.errors.any? %>
                <div class="alert alert-danger alert-custom">
                  <button type="button" class="close closeNotify">&times;</button>
                  <% @category.errors.full_messages.each do |msg| %>
                    <p><%= msg %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div class="col-md-6"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
