<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "add_new" %></h3>
      </div>
      <div class="panel-body">
        <%= form_for [:admin, @category], remote: true do |f| %>
          <div class="row">
            <div class="col-md-6">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: t("category_name"),
                class: "form-control reset-input" %>
            </div>
            <div class = "clr"></div>
            <div class="col-md-6 top-20 padding-0">
              <div class="form-group col-md-3">
                <%= button_tag type: "submit",
                  class: "btn ripple btn-gradient btn-info" do %>
                  <div><span><%= t "add_button" %></span></div>
                <% end %>
              </div>
              <div class="form-group col-md-3">
                <%= button_tag type: "reset",
                  class: "btn ripple btn-gradient btn-default" do %>
                  <div><span><%= t "reset_button" %></span></div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6 mess-area-add">
            </div>
            <div class="col-md-6">
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="col-md-12 top-20 padding-0">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <h3><%= t "show" %></h3>
      </div>
      <div class="panel-body">
        <div class="col-md-6 mess-area-du padding-0">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>">
              <button type="button" class="close closeNotify">&times;</button>
              <%= message %>
            </div>
          <% end %>
        </div>
        <div class="col-md-12 col-md-12-custom top-20 padding-0">
          <div class="col-md-4 padding-0">
            <%= form_tag admin_categories_path, method: "GET",
              id: "my_form_search" do %>
              <%= text_field_tag :key_seach, params[:key_seach],
                placeholder: t("category_name"),
                class: "form-control reset-input" %>
              <span class="glyphicon glyphicon-search form-control-feedback">
              </span>
            <% end %>
          </div>
        </div>
        <div class = "clr"></div>
        <div class="responsive-table sort-table">
        </div>
      </div>
    </div>
  </div>
</div>
