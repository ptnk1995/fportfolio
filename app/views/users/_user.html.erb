<div class="card" style="width: 270px; height: 400px;">
  <div class="image">
    <%=  image_tag user.images.first.image.url,
        data: {toggle: "modal", target: "#myModal#{user.id}"}, style: "width: 270px; height: 280px;" %>
  </div>
  <div class="content">
    <div class="header"><%= user.name %></div>
    <div class="meta">
      <%= user.position %>
    </div>
    <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
      <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
      <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
      <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
      <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
    <div class="description">
      <%= user.biography %>
    </div>
  </div>
  <div class="extra content">
    <span class="right floated">
      Joined in 2013
    </span>
    <span>
      <i class="user icon"></i>
      <%= user.projects.count %> projects
    </span>
  </div>
</div>
<div class="modal member-modal-width fade" id="myModal<%= user.id %>" tabindex="-1" role="dialog",
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for Participate.new do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title" id="myModalLabel"><%= t "users.about_you" %></h4>
        </div>
        <div class="modal-body">
          <center>
            <%= image_tag user.images.first.image.url, class: "img-circle" %>
            <h1 class="media-heading"><%= user.name %></h1>
            <h2 class="media-heading"><%= user.position %></h2>
            <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
            <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
            <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
            <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
            <span class="glyphicon glyphicon-star" style="color:#f4b942"></span>
          </center>
          <div class="row clearfix">
            <div class="table-responsive">
              <table class="table user-table text-left">
                <tr >
                  <td class="first"><h4>
                    <span class="glyphicon glyphicon-thumbs-up" style="color:#f4b942">
                    </span><%= t "users.like" %></h4>
                  </td>
                  <td class="first"><h4>
                    <span class="glyphicon glyphicon-ok-sign" style="color:#f4b942">
                    </span><%= t "users.rate" %></h4>
                  </td>
                </tr>
                <tr>
                  <td class="first"><h4>
                    <span class="glyphicon glyphicon-certificate" style="color:#f4b942">
                    </span><%= t "users.skill" %></h4>
                  </td>
                  <td class="second"><h4>
                    <span class="glyphicon glyphicon-certificate" style="color:#f4b942">
                    </span><%= t "users.cetificate" %></h4>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          <hr>
          <center>
            <h4 class="text-left"><strong><%= t "users.biography" %> </strong><br>
              <%= user.biography %></h4><br>
          </center>
          <% if user_signed_in? %>
            <strong>
              <%= t "users.label_position" %>
              <%= f.select :project_id, options_for_select(
                current_user.projects.map{|c| [c.name, c.id]},
                f.object.project_id), {},
                {class: "form-control selectpicker", "data-live-search": true}%>
            </strong><br>
            <%= f.text_field :description, class: "form-control input-md", placeholder: true %>
            <%= f.hidden_field :user_id, value: user.id %>
            <br>
          <% end %>
        </div>
        <div class="modal-footer">
          <center>
            <%= f.submit t("users.add_member"), class: "btn btn-primary" if user_signed_in? %>
          </center>
        </div>
      <% end %>
    </div>
  </div>
</div>
