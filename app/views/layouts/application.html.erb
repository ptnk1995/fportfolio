<!DOCTYPE html>
<html>
  <head>
    <title><%= t("title_home") %></title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all",
    "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
    <%= favicon_link_tag "icon.png" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script async src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.1.8/semantic.min.js"></script>
  </head>
  <body>
    <%= render "layouts/header" %>
    <div class="flash-messages">

    <%= render "shared/flash_message.js.erb" %>
    </div>
    <div id="wrapper" class="wrapper margin-minus-top">
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
