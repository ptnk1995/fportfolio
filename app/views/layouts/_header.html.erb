<header id="header">
  <nav class="navbar st-navbar navbar-fixed-top">
    <div class="ui top attached demo menu">
      <div class="left width-90"></div>
      <div class="right">
        <div class="language">
          <%= link_to url_for(locale: "vi") do %>
            <%= image_tag "vi.png" %>
          <% end %>
          <%= link_to url_for(locale: "en") do %>
            <%= image_tag "en.png" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navbar-collapse">
          <span class="sr-only"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <%= link_to root_path do %>
          <%= image_tag "/assets/logo.png", class: "logo-framgia" %>
        <% end %>
      </div>
      <div class="collapse navbar-collapse" id="st-navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("header.menu.home"), root_path(I18n.locale) %></li>
          <li><%= link_to t("header.menu.project"), projects_path(I18n.locale) %></li>
          <li><%= link_to t("header.menu.blog"), blogs_path(I18n.locale) %></li>
          <li><%= link_to t("header.menu.new"), news_index_path(I18n.locale) %></li>
          <li><%= link_to t("header.menu.about_team"), "#introduce-team" %></li>
          <li><%= link_to t("member"), users_path %></li>
          <li><%= link_to t("header.menu.contact"), "#" %></li>
          <% if user_signed_in? %>
            <li>
              <%= link_to t("log_out"), destroy_user_session_path(locale: I18n.locale),
              method: :delete %>
            </li>
          <% else %>
            <li><%= link_to t("login"), new_user_session_path(locale: I18n.locale) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
