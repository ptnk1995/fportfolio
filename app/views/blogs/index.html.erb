<!-- PAGE HEADER -->
<section id="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section-title">
          <h1><%= t "header.menu.blog" %></h1>
          <span class="st-border"></span>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- /PAGE HEADER -->
<!-- BLOG -->
<section id="blog">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <% @blogs.each do |blog| %>
        <div class="single-blog">
          <article>
            <div class="post-thumb">
              <%= image_tag blog.image.url, class: "img-responsive resize-blog" %>
            </div>
            <h4 class="post-title"><%= link_to blog.title, "" %></h4>
            <div class="post-meta text-uppercase">
              <span><%= I18n.l blog.created_at, format: t("format.datetime_create") %></span>
              <span><%= t "in" %> <%= link_to blog.category.name, blogs_path(category: blog.category.id) %></span>
              <span><%= t "by" %> <%= link_to blog.user.name, "" %></span>
            </div>
            <div class="post-article">
              <%= blog.content.truncate(Settings.description) %>...
            </div>
            <%= link_to t("read_more"), blog_path(I18n.locale, blog), class: "btn btn-readmore" %>
          </article>
        </div>
        <% end %>
        <hr>
        <div class="center"><%= paginate @blogs, theme: "twitter-bootstrap-3" %></div>
      </div>
      <div class="col-md-3">
        <div class="sidebar-widget">
          <div class="blog-search">
            <form>
                <input type="text" name="search">
                <span>
                  <button id="submit_btn" class="search-submit" type="submit">
                    <i class="fa fa-search"></i>
                    </button>
                </span>
            </form>
          </div>
        </div>
        <%= render "categories/list_category" %>
      </div>
    </div>
  </div>
</section>
<!-- /BLOG -->
