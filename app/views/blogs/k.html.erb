    border-bottom: 1px solid #F2F2F2;
    margin-bottom: 10px;
    padding-bottom: 10px;
}
.widget ul {
    padding: 0;
    line-height: 18px;
    font-size: 14px;
}
.widget ul.nav.nav-tabs {
    padding: 0;
}
#secondary .widget {
    margin-bottom: 50px;
    overflow: hidden;
