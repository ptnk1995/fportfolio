.recent-posts-wrapper .post .post-content {
    margin-left: 100px;
}
.widget .post-content> span {
    display: block;
}
#secondary .widget .post-content a {
    font-style: italic;
    font-size: 16px;
}
#secondary .widget .post-content a:hover {}
.widget .post-content span {
    font-size: 12px;
}
